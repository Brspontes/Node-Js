{
  "openapi": "3.0.1",
  "info": {
    "version": "1.3.0",
    "title": "API",
    "description": "User management API",
    "termsOfService": "http://api_url/terms/",
    "contact": {
      "name": "Wolox Team",
      "email": "hello@wolox.co",
      "url": "https://www.wolox.com.ar/"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [{
    "url": "http://localhost:4000/",
    "description": "Local server"
  }],
  "security": [{
    "ApiKeyAuth": [

    ]
  }],
  "paths": {
    "/heroes": {
      "get": {
        "tags": [
          "CRUD Herois"
        ],
        "description": "Get Herois",
        "operationId": "getHerois",
        "responses": {
          "200": {
            "description": "Herois",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Herois"
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "companyId is missing",
                  "internal_code": "missing_parameters"
                }
              }
            }
          }
        }
      }
    },
    "/heroes/{id}": {
      "get": {
        "tags": [
          "CRUD Herois"
        ],
        "description": "Get Herois por Id",
        "operationId": "getHeroisId",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type":"integer"
            },
            "required":true
          }
        ],
        "responses": {
          "200": {
            "description": "Herois",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Heroi"
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "companyId is missing",
                  "internal_code": "missing_parameters"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Heroi": {
        "type": "object",
        "properties": {
          "Id": {
            "type": "integer",
            "description": "User identification number",
            "example": 1234
          },
          "identidade_secreta": {
            "type": "string",
            "example": "Nome Verdadeiro"
          },
          "nome_heroi": {
            "type": "string",
            "example": "Nome Fantasia"
          },
          "poder": {
            "type": "string",
            "example": "Poder Heroi"
          }
        }
      },
      "Herois": {
        "type": "object",
        "properties": {
          "herois": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Heroi"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "internal_code": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}